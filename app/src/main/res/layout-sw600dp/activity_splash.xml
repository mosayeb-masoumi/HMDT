<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/splash_root"
    android:layout_height="match_parent"
    tools:context=".ui.activities.SplashActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_simple" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl10"
        android:layout_marginTop="20dp"
        android:layout_height="350dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/splash_logo" />

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/txtPoweredBy"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="75dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/powered_by"
            android:textColor="@color/white_gray" />

        <ImageView
            android:id="@+id/rahbartxt"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_below="@+id/txt"
            android:src="@drawable/rahbartxt" />

        <TextView
            android:id="@+id/vesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rahbartxt"
            android:text="version "
            android:textColor="@color/white_gray" />

        <TextView
            android:id="@+id/txtVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rahbartxt"
            android:layout_toEndOf="@+id/vesion"
            android:textColor="@color/white_gray" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/txtPoweredBy"
        android:layout_height="wrap_content">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:visibility="visible"
            app:indicatorColor="@color/white_gray" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="@string/tryagain"
            android:id="@+id/btn_reload"
            android:textColor="@color/blue"
            android:visibility="gone"
            android:background="@drawable/bg_tryagain"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>




</RelativeLayout>