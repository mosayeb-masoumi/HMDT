<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg_simple" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rl10"
        android:layout_marginTop="20dp"
        android:layout_height="350dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/logo"
            android:layout_centerHorizontal="true"
            android:src="@drawable/splash_logo2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/rl8"
        android:layout_height="57dp">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:src="@drawable/bg_login_phone_blue" />
        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="107dp"
            android:layout_marginEnd="107dp"
            android:background="@drawable/edtphone_shape"
            android:gravity="center"
            android:hint="@string/text_input_mobile"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="12dp"
            android:textColorHint="@color/blue"
            android:textDirection="rtl"
            android:textSize="20sp" />
    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/rl8"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:id="@+id/rl_av_login"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_phoneregister_shape">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:indicatorName="BallPulseIndicator" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_submit_login"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:background="@drawable/bg_phoneregister_shape"
            android:textSize="17sp"
            android:text="@string/login_button_text"
            android:textColor="@color/white" />

    </RelativeLayout>


    <ImageView
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/login_iconpage"  />

</RelativeLayout>