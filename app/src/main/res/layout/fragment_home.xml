<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="2dp"
        android:weightSum="2">


        <android.support.v7.widget.CardView
            android:id="@+id/crd_video"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_above="@+id/divider_vid"
                    android:background="#F3EEEE"
                    android:layout_height="match_parent">


                    <com.wang.avi.AVLoadingIndicatorView
                        app:indicatorColor="@color/colorPrimary"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:padding="2dp"
                        android:layout_centerVertical="true"
                        app:indicatorName="BallPulseSyncIndicator" />

                    <ImageView
                        android:id="@+id/img_video"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="20dp"
                        android:src="@drawable/play_icon" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/divider_vid"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_above="@+id/vd_bottom"
                    android:background="#abe1fa"
                    android:orientation="horizontal" />

                <RelativeLayout
                    android:id="@+id/vd_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="#2e3192"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_video"
                        android:textColor="@color/white_gray"
                        android:textSize="14dp" />
                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/crd_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#F3EEEE"
                android:layout_height="match_parent">


                <com.wang.avi.AVLoadingIndicatorView
                    app:indicatorColor="@color/colorPrimary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    app:indicatorName="BallPulseSyncIndicator" />


                <ImageView
                    android:id="@+id/img_news"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/divider_img" />


                <RelativeLayout
                    android:id="@+id/divider_img"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_above="@+id/news_btm"
                    android:background="#e4b1ff">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/news_btm"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="#821f9e"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_news"
                        android:textColor="@color/white_gray"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:padding="2dp">

        <android.support.v7.widget.CardView
            android:id="@+id/crd_purchases"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#F3EEEE"
                android:layout_height="match_parent">


                <com.wang.avi.AVLoadingIndicatorView
                    app:indicatorColor="@color/colorPrimary"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:padding="2dp"
                    android:layout_centerVertical="true"
                    app:indicatorName="BallPulseSyncIndicator" />

                <ImageView
                    android:id="@+id/img_myshop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/divider_poll"/>

                <RelativeLayout
                    android:id="@+id/divider_poll"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_above="@+id/polls_btm"
                    android:background="#ff9cd0">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/polls_btm"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ca1390"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="@string/text_polls"
                        android:textColor="@color/white_gray"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="3"
            card_view:cardCornerRadius="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/dashboard_btm"
                    android:background="#dde7ff">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/rlHomeLeftDays"
                        android:layout_weight="2">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginBottom="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/prize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical"
                            android:text="@string/store_tab"
                            android:textColor="@color/blue"
                            android:textSize="11sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"
                        android:background="@drawable/home_dashboard_column_gradient">

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/rlHomeActiveSurveys"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="2dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/active_poll" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_vertical"
                            android:text="@string/total_purchase"
                            android:textColor="@color/blue"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"
                        android:background="@drawable/home_dashboard_column_gradient">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/rlHomeBalance"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="2dp"
                            android:src="@drawable/balance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_vertical"
                            android:text="@string/incomplete_purchase"
                            android:textColor="@color/blue"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.03"
                        android:background="@drawable/home_dashboard_column_gradient">

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:id="@+id/rlHomeScore"
                        android:layout_weight="2">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/your_point_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="0dp"
                            android:gravity="center_vertical"
                            android:text="@string/text_balance"
                            android:textColor="@color/blue"
                            android:textSize="11sp" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dashboard_btm"
                    android:layout_width="match_parent"
                    android:layout_height="23dp"
                    android:layout_alignParentBottom="true"
                    android:background="#264796"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txt_registered_products"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_centerVertical="true"
                            android:text="-"
                            android:textColor="@color/white_gray"
                            android:textSize="12sp" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txt_total_purchase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="1dp"
                            android:text="-"
                            android:textColor="@color/white_gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txt_incomplete_purchase"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="3dp"
                            android:text="-"
                            android:textColor="@color/white_gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txt_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="-"
                            android:textColor="@color/white_gray"
                            android:textSize="12sp" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>