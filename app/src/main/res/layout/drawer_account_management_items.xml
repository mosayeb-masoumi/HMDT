<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_account_management"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginTop="3dp"
        android:foreground="?attr/selectableItemBackground"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/account_management" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:text="@string/account_management"
            android:textColor="@color/white_gray"
            android:textSize="14sp"/>

        <ImageView
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:id="@+id/img_arrow_account_management" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_submenu_account_management"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_transaction_list_drawer"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:text="-"
                android:textColor="@color/white_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/transaction_list"
                android:textColor="@color/white_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_papasi_to_rial_drawer"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:text="-"
                android:textColor="@color/white_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/papasi_to_rial"
                android:textColor="@color/white_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_my_wallet_drawer"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="horizontal"
            android:paddingStart="5dp">

            <TextView
                android:layout_width="34dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="9dp"
                android:text="-"
                android:textColor="@color/white_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/my_wallet"
                android:textColor="@color/white_gray"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>