<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/bg_toolbar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ثبت بارکد"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginStart="20dp"

                android:textColor="@color/blue_dark"
                android:id="@+id/txt_desc_barcode"
                android:text="به کمک اسکن بارکد , بارکد محصول خود را بخوانید. توجه داشته باشید که اولویت با بارکدی است که با عدد 626 آغاز می گردد. در غیر اینصورت در قسمت بارکد عدد انرا تایپ کنید و نهایتا دکمه ی ثبت را لمس کنید."/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt3"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/blue_dark"
            android:text="کالاهای قابل ثبت"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_list_registable"
            android:textColor="@color/blue_dark"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_prize_item"
            android:text="لیمو,مداد"/>

        <EditText
            android:id="@+id/edt_barcode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_prize_item"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="@string/barcode"
            android:inputType="number"
            android:padding="5sp"
            android:textColor="@color/blue_dark"
            android:textColorHint="@color/blue"
            android:textDirection="rtl"
            android:textSize="14sp" />


        <Button
            android:id="@+id/btn_choose_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_btn_prize"
            android:text="@string/scanner"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_choose_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_choose_scanner"
            android:layout_centerInParent="true"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_btn_prize"
            android:text="@string/search"
            android:visibility="gone"
            android:textColor="@color/white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/ll_return"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/bg_btn_prize">

            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avi_register_barcode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:indicatorColor="@color/white" />

            <Button
                android:id="@+id/btn_register_barcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_btn_prize"
                android:text="@string/register"
                android:textColor="@color/white" />


        </RelativeLayout>

    </LinearLayout>

    </ScrollView>



    <LinearLayout
        android:id="@+id/ll_return"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layoutDirection="rtl"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_toolbar"
        android:gravity="end">

        <LinearLayout
            android:id="@+id/linear_exit"
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="@string/retuen"
                android:textColor="@color/white_gray"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_left"
                android:padding="3dp"
                android:tint="#FFF" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>