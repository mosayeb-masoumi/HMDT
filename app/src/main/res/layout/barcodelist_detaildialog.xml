<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/dialog_btn_shape"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl6"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/dialog_header_shape">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:padding="6dp"
            android:src="@drawable/ic_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/explanation"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/rl6"
        android:layout_marginTop="2dp"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_barcodeListDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

        </android.support.v7.widget.RecyclerView>


        <!--<TextView-->
        <!--android:layout_width="240dp"-->
        <!--android:layout_height="2dp" />-->

        <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_margin="10dp"-->
        <!--app:cardCornerRadius="20dp">-->

        <!--<ImageView-->
        <!--android:id="@+id/imageview"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:src="@color/blue_dark" />-->

        <!--</android.support.v7.widget.CardView>-->

    </LinearLayout>


    <Button
        android:id="@+id/btn_close_barcodeListDialog"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dialog_btn_shape"
        android:gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/close"
        android:textColor="@color/blue"
        android:textSize="12sp" />

</LinearLayout>