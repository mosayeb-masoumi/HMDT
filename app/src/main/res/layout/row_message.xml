<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_row_message"
    android:background="@drawable/activelist_rv_bg"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:id="@+id/img_open_item_message"
                android:padding="10dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_title_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center_vertical"

            android:layout_weight="2"
            tools:text="عنوان" />

        <TextView
            android:id="@+id/item_date_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|end"
            android:layout_marginEnd="10dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            tools:text="98/12/04" />


    </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_sub_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sub_item_body_message"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:layout_marginEnd="10dp"
                android:gravity="start"
                android:layout_height="wrap_content"
                tools:text="سلام خوبی" />

        </LinearLayout>




</LinearLayout>