<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_root_activelist_rv_bg"
    android:layout_marginBottom="5dp"
    android:background="@drawable/activelist_rv_bg"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="7dp"
            android:src="@drawable/info_icon"
            android:id="@+id/img_info_accountlist"
            android:layout_weight="0.5"/>



        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/edit_purchase_icon"
            android:padding="15dp"
            android:gravity="center"
            android:text="مبلغ"
            android:textSize="14sp"
            android:textColor="@color/blue_dark"
            android:id="@+id/txt_amount_accountlist"
            android:layout_weight="1.5"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:id="@+id/txt_title_accountlist"
                android:textColor="@color/blue_dark"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                android:text="jkljkjk"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:textColor="@color/blue_dark"
                android:layout_below="@+id/txt_title_accountlist"
                android:id="@+id/txt_date_accountlist"
                android:text="jkljkjk"/>

        </RelativeLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:id="@+id/img_transaction_accountlist"
            android:layout_weight="0.4"/>

    </LinearLayout>



</LinearLayout>