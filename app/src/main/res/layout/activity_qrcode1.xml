<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_qrcode_scanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rahbarbazaar.homadit.android.ui.activities.QRcodeActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/bg_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/scanner"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/group_good_item_bg2"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:id="@+id/img_icon"/>

        </RelativeLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_group_title"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/blue_dark"
            android:text="txt_group_title"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:text="فهرست کالاهای مجاز"
            android:textColor="@color/blue_dark"
            android:textSize="16sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn4_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn4"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn3_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn3"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn2_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn2"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn1_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn1"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn8_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn8"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn7_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn7"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn6_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn6"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn5_register_barcode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_btn_prize"
                android:text="btn5"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#fff">

        <FrameLayout
            android:id="@+id/frg_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.wang.avi.AVLoadingIndicatorView
            android:id="@+id/avi_qrcode"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            app:indicatorColor="@color/blue_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp">


            <Button
                android:id="@+id/btn_finish_purchase_qrcode"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_add"
                android:text="@string/finish_purchase"
                android:textColor="@color/white"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="2dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_add"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_unreadable"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_button_add"
                    android:text="عدم خواندن بارکد"
                    android:textColor="@color/white" />

                <com.wang.avi.AVLoadingIndicatorView
                    android:id="@+id/avi_unreadable"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:visibility="gone" />


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

